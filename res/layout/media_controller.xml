<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" 
	android:background="@drawable/gradient" 
	android:id="@+id/media_controller" 
	android:layout_height="80px" 
	android:layout_alignParentBottom="true">
		<ImageButton android:src="@drawable/play" android:id="@+id/playButton" android:background="@drawable/media_button" android:layout_width="wrap_content" android:layout_height="fill_parent" android:scaleType="center" android:layout_centerVertical="true" android:layout_alignParentLeft="true" android:layout_marginLeft="50dp"></ImageButton>
		<ImageButton android:src="@drawable/skip" android:id="@+id/skipButton" android:background="@drawable/media_button" android:layout_width="wrap_content" android:layout_height="fill_parent" android:scaleType="center" android:layout_centerVertical="true" android:layout_centerHorizontal="true"></ImageButton>
		<ImageButton android:src="@drawable/next" android:id="@+id/nextButton" android:background="@drawable/media_button" android:layout_width="wrap_content" android:layout_height="fill_parent" android:scaleType="center" android:layout_centerVertical="true" android:layout_alignParentRight="true" android:layout_marginRight="50dp"></ImageButton>
</RelativeLayout>
